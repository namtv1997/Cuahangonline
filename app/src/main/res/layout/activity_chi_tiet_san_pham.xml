<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietSanPhamActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarchitietsanpham"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b13c2b"
        app:title="Chi Tiêt Sản Phẩm"
        app:titleTextColor="#f9f6f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageviewchitietsanpham"
            android:layout_width="140dp"
            android:layout_height="155dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewtenchitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="ten san pham"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewgiachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="gia san pham"
                android:textColor="#f20"
                android:textSize="17sp" />
            <Spinner
                android:layout_margin="3dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner"
                android:textAlignment="center"
                android:id="@+id/spinner"
                android:layout_width="100dp"
                android:layout_height="30dp">
            </Spinner>
            <Button
                android:layout_margin="7dp"
               android:layout_marginRight="7dp"
                android:id="@+id/buttondatmua"
                android:textColor="#ffd400"
                android:textSize="15sp"
                android:background="#43acb7"
                android:text="Thêm Giỏ Hàng"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#ed1329"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:text="Mô Tả Chi Tiết Sản Phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:textColor="#252526"
                android:id="@+id/textviewmotachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>